<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NavTube" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textColorPrimary">@color/primaryDark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/primaryDark</item>
        <item name="android:textColorSecondary">@color/unactive</item>
        <item name="chipGroupStyle">@style/chipsGroup</item>
        <item name="actionOverflowMenuStyle">@style/myListPopupWindow</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="searchViewStyle">@style/searchViewStyle</item>
        <item name="searchEditTextBackgroundColor">@color/white</item>

    </style>


    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.NavTube</item>
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="mainCard">
        <item name="android:popupMenuStyle">@style/myListPopupWindow</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="myListPopupWindow" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_shape</item>
        <item name="android:textColor">?android:colorPrimaryDark</item>
    </style>

    <style name="chipsGroup" parent="Widget.MaterialComponents.Chip.Choice">

    </style>

    <style name="PopupDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorOnSurface">@color/dialogBackground</item>
        <item name="colorSurface">@color/primary</item>
    </style>



    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">@dimen/corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/corner_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <declare-styleable name="ShadowLayout">
        <attr name="sl_shadowed" format="boolean" />
        <attr name="sl_shadow_distance" format="dimension" />
        <attr name="sl_shadow_angle" format="integer" />
        <attr name="sl_shadow_radius" format="dimension" />
        <attr name="sl_shadow_color" format="color" />
        <attr name="searchEditTextBackgroundColor" format="color" />
    </declare-styleable>
    <style name="searchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="defaultQueryHint">@string/search_hint</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@drawable/search_edittext_background</item>
        <item name="searchIcon">@drawable/ic_search</item>

    </style>

</resources>