<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled -->
    <item android:alpha="@dimen/material_emphasis_disabled" android:color="@color/gry" android:state_enabled="false" />
    <item android:color="@color/primaryDark" android:alpha="0.7" android:state_pressed="true"/>
    <!-- Uncheckable -->
    <item android:color="@color/primaryDark" android:state_checkable="false" />

    <!-- Checked Buttons. -->
    <item android:color="@color/primaryDark" android:state_checked="true" />


    <!-- Not-checked Buttons. -->
    <item android:color="@color/primaryDark" />
</selector>