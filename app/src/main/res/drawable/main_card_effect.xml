<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="100dp"
        android:left="100dp"
        android:right="100dp"
        android:bottom="100dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>

    </item>

    <!--  left shadow -->

    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerX="0.2"
                android:centerColor="#00FFFFFF"
                android:startColor="#40000000" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerY="0.4"
                android:centerColor="#00FFFFFF"
                android:startColor="#59000000" />
        </shape>
    </item>
    <!--  bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerY="0.6"
                android:type="linear"
                android:centerColor="#00FFFFFF"
                android:startColor="#59000000" />
        </shape>
    </item>
</layer-list>